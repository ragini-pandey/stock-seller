# Environment Variables Template
# Copy this file to .env.local and fill in your values

# MongoDB Connection
# For local development: mongodb://localhost:27017/stocks-ai
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/stocks-ai
MONGODB_URI=mongodb://localhost:27017/stocks-ai

# WhatsApp Service (Twilio WhatsApp API)
# Get your credentials from: https://console.twilio.com/
# Apply for WhatsApp: https://www.twilio.com/whatsapp
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=+14155238886

# Alternative WhatsApp Service (WhatsApp Business API)
# WHATSAPP_BUSINESS_PHONE_ID=your_phone_number_id
# WHATSAPP_ACCESS_TOKEN=your_access_token

# Stock API (Alpha Vantage)
# Get free API key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_api_key

# Alternative Stock API (Finnhub)
# Get free API key: https://finnhub.io/register
FINNHUB_API_KEY=your_api_key

# Alternative Stock API (Twelve Data)
# Get free API key: https://twelvedata.com/pricing
TWELVE_DATA_API_KEY=your_api_key

# Batch Job Configuration
BATCH_ENABLED=true
BATCH_INTERVAL_HOURS=1

# Firebase Cloud Messaging (FCM) - Push Notifications
# Get these from Firebase Console: https://console.firebase.google.com/

# Client-side Firebase Config (Public - can be exposed)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# VAPID Key for Web Push (Get from Firebase Console > Project Settings > Cloud Messaging)
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_here

# Server-side Firebase Admin (SECRET - Never expose to client)
# Option 1: Service Account JSON as string (recommended for deployment)
FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"..."}'

# Option 2: Service Account JSON file path (good for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/serviceAccountKey.json

# Cron Job Security
# Generate a random secret string to protect your cron endpoints
# Use: openssl rand -hex 32
CRON_SECRET=your-random-secret-string-here
